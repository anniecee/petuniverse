<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="1dp"
    android:layout_marginBottom="16dp"
    android:elevation="15dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Pet Image with Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/petImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Pet Image"
                android:scaleType="centerCrop"
                android:src="@drawable/pet_accessories_logo" />
        </androidx.cardview.widget.CardView>

        <!-- Pet Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Pet Name -->
            <TextView
                android:id="@+id/petNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Pet Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Pet Price -->
            <TextView
                android:id="@+id/petPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="14sp" />
        </LinearLayout>


        <!-- Location -->
        <!--        <TextView-->
        <!--            android:id="@+id/locationTextView"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Location"-->
        <!--            android:drawablePadding="4dp"-->
        <!--            android:textSize="14sp"-->
        <!--            android:textColor="@android:color/darker_gray"-->
        <!--            />-->

        <!-- Pet Type -->
        <TextView
            android:id="@+id/petTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="This is the type of pet."
            android:textSize="14sp" />

        <!-- Pet Description -->
        <TextView
            android:id="@+id/petDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="This is a short description of the pet."
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>